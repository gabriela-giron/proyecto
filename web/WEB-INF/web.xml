<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>login_servlet</servlet-name>
        <servlet-class>controlador.login_servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sr_proveedor</servlet-name>
        <servlet-class>controlador.sr_proveedor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>srv_usuarios</servlet-name>
        <servlet-class>controlador.srv_usuarios</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sr_vendedor</servlet-name>
        <servlet-class>controlador.sr_vendedor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sr_cliente</servlet-name>
        <servlet-class>controlador.sr_cliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sr_usuario</servlet-name>
        <servlet-class>controlador.sr_usuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>gruposDAO</servlet-name>
        <servlet-class>modelo.gruposDAO</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login_servlet</servlet-name>
        <url-pattern>/login_servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sr_proveedor</servlet-name>
        <url-pattern>/sr_proveedor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>srv_usuarios</servlet-name>
        <url-pattern>/srv_usuarios</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sr_vendedor</servlet-name>
        <url-pattern>/sr_vendedor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sr_cliente</servlet-name>
        <url-pattern>/sr_cliente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sr_usuario</servlet-name>
        <url-pattern>/sr_usuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>gruposDAO</servlet-name>
        <url-pattern>/gruposDAO</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
